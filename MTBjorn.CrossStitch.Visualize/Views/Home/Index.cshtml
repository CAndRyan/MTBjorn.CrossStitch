@model string

@{
    ViewData["Title"] = "Home Page";
}

<script src="https://cdn.plot.ly/plotly-2.14.0.min.js"></script>

<div class="text-center">
    <h1 class="display-4">Rebalance History</h1>
    
    <div>
        <div id="plot-container"></div>
    </div>
</div>

<script defer>
    document.addEventListener("DOMContentLoaded", function () {
        const diagnostics = JSON.parse('@Html.Raw(Model)');
        const centroidData = diagnostics.Centroids.map((group, index) => ({
            x: group.map(p => p.R),
            y: group.map(p => p.G),
            z: group.map(p => p.B),
            name: `Group ${index}`,
            mode: 'markers',
            marker: {
                size: 4
            },
            type: 'scatter3d'
        }));
        const pixelData = {
            x: diagnostics.Pixels.map((pixelInfo) => pixelInfo.Pixel.R),
            y: diagnostics.Pixels.map((pixelInfo) => pixelInfo.Pixel.G),
            z: diagnostics.Pixels.map((pixelInfo) => pixelInfo.Pixel.B),
            name: 'Pixels',
            mode: 'markers',
            marker: {
                size: 2
            },
            type: 'scatter3d'
        };
        const traces = [ ...centroidData, pixelData ];
        const layout = {
            title: 'Centroids',
            showlegend: true,
            autosize: true,
            width: 800,
            height: 800,
            scene: {
                xaxis: { title: 'Red' },
                yaxis: { title: 'Green' },
                zaxis: { title: 'Blue' }
            }
        };
        Plotly.newPlot('plot-container', traces, layout);
    });
</script>
